<% if @cocktail.photo.attached? %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
    <h2><%= @cocktail.name %></h2>
  </div>
<% else %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "banner.jpg" %>')">
    <h2><%= @cocktail.name %></h2>
  </div>
<% end %>

<div class="container mt-5 text-center" style="width: 800px">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
  <br>
  <p><%= link_to '<i class="fas fa-backward"></i> Back'.html_safe, cocktail_path(@cocktail), class: "btn btn-secondary"%></p>
</div>