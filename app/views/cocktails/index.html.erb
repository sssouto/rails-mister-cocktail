<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "banner.jpg" %>');">
  <div class="container">
    <h1> <strong>Cocktails</strong></h1>
    <p>Good drink ideas for you to taste and share!</p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-gradient" %>
  </div>
</div>

<div class="container mt-5">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')">
          <%= link_to "#{cocktail.name}", cocktail %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "banner.jpg" %>')">
          <%= link_to "#{cocktail.name}", cocktail %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
