<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "banner.jpg" %>')">
      <h1>Cocktails</h1>
</div>

<div class="container mt-5">
  <div class="cards">
    <% if @cocktail.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key %>')">
        <h2><%= @cocktail.name %></h2>
      </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "generic_drinks.jpg" %>')">
        <h2><%= @cocktail.name %></h2>
      </div>
    <% end %>
    <div>
      <table class="table">
        <thead>
          <tr>
            <th>Description</th>
            <th>Ingredient</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.description %></td>
              <td><%= dose.ingredient.name %></td>
              <td><%= link_to '<i class="fas fa-trash"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Sure?'} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="text-center">
      <p><%= link_to 'Add a new dose to the cocktail', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
      <p><%= link_to '<i class="fas fa-backward"></i> Back'.html_safe, cocktails_path, class: "btn btn-secondary"%></p>
    </div>
  </div>
</div>
